@page "{handler?}"
@model Ext.Net.Examples.Pages.samples.layout.hboxlayout.basic.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>
            HBoxLayout - Ext.NET Examples
        </title>
        <link href="/resources/css/examples.css" rel="stylesheet" />
        <script>
            var replace = function (panel) {
                var btns = Ext.getCmp("btns"),
                    comp;

                comp = btns.remove(0, false);

                if (comp) {
                    Ext.get("hiddenArea").appendChild(comp.getEl());
                }

                btns.add(panel);
                btns.updateLayout();
            };
        </script>
    </head>
    <body>
        <ext-viewport layout="Border">
            <items>
                <ext-panel
                    id="btns"
                    title="HBox Layout"
                    rounded="false"
                    region="North"
                    x:raw-split="true"
                    height="180"
                    layout="Fit"
                    />
                <ext-panel region="Center" bodyPadding="18">
                    <items>
                        <ext-container layout="HBox">
                            <defaults>
                                <ext-add key="margin" value="0 10 0 0" />
                                <ext-add key="toggleGroup" value="btns" />
                                <ext-add key="allowDepress" value="false" mode="Raw" />
                                <ext-add key="width" value="140" mode="Raw" />
                            </defaults>
                            <items>
                                <ext-button text="Spaced" onClientClick="replace(App.pnlSpaced);" />
                                <ext-button text="Align: Top" onClientClick="replace(App.pnlAlignTop);" />
                                <ext-button text="Align: Middle" onClientClick="replace(App.pnlAlignMiddle);" />
                                <ext-button text="Align: Stretch" onClientClick="replace(App.pnlAlignStretch);" />
                                <ext-button text="Align: StretchMax" onClientClick="replace(App.pnlAlignStretchMax);" />
                            </items>
                        </ext-container>
                        <ext-container layout="HBox" marginAsString="10 0 0 0">
                            <defaults>
                                <ext-add key="margin" value="0 10 0 0" />
                                <ext-add key="pressed" value="false" mode="Raw" />
                                <ext-add key="toggleGroup" value="btns" />
                                <ext-add key="allowDepress" value="false" mode="Raw" />
                                <ext-add key="width" value="140" mode="Raw" />
                            </defaults>
                            <items>
                                <ext-button text="Flex: All Even" onClientClick="replace(App.pnlFlexEven);" />
                                <ext-button text="Flex: Ratio" onClientClick="replace(App.pnlFlexRatio);" />
                                <ext-button text="Pack: Start" onClientClick="replace(App.pnlPackStart);" />
                                <ext-button text="Pack: Center" onClientClick="replace(App.pnlPackCenter);" />
                                <ext-button text="Pack: End" onClientClick="replace(App.pnlPackEnd);" />
                            </items>
                        </ext-container>
                    </items>
                </ext-panel>
            </items>
        </ext-viewport>
        <div id="hiddenArea" class="x-hidden">
            <ext-panel id="pnlSpaced" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Begin" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-component flex="1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" margin="0" />
                </items>
            </ext-panel>
            <ext-panel id="pnlAlignTop" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Begin" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
            <ext-panel id="pnlAlignMiddle" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Middle" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
            <ext-panel id="pnlAlignStretch" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Stretch" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
            <ext-panel id="pnlAlignStretchMax" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Stretchmax" />
                </layout>
                <items>
                    <ext-button text="Button 1 - height 30px" height="30" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
            <ext-panel id="pnlFlexEven" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Middle" />
                </layout>
                <items>
                    <ext-button text="Button 1" flex="1" />
                    <ext-button text="Button 2" flex="1" />
                    <ext-button text="Button 3" flex="1" />
                    <ext-button text="Button 4" flex="1" margin="0" />
                </items>
            </ext-panel>
            <ext-panel id="pnlFlexRatio" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Middle" />
                </layout>
                <items>
                    <ext-button text="Button 1" flex="1" />
                    <ext-button text="Button 2" flex="1" />
                    <ext-button text="Button 3" flex="1" />
                    <ext-button text="Button 4" flex="3" margin="0" />
                </items>
            </ext-panel>
            <ext-panel id="pnlPackStart" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Middle" pack="Start" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
            <ext-panel id="pnlPackCenter" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Middle" pack="Center" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
            <ext-panel id="pnlPackEnd" layout="HBox" bodyPadding="18">
                <defaults>
                    <ext-add key="margin" value="0 5 0 0" />
                </defaults>
                <layout>
                    <ext-hboxLayout align="Middle" pack="End" />
                </layout>
                <items>
                    <ext-button text="Button 1" />
                    <ext-button text="Button 2" />
                    <ext-button text="Button 3" />
                    <ext-button text="Button 4" />
                </items>
            </ext-panel>
        </div>
    </body>
</html>
