@page "{handler?}"
@model Ext.Net.Examples.Pages.samples.layout.hboxlayout.split.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>
            VBoxLayout - Ext.NET Examples
        </title>
        <link href="/resources/css/examples.css" rel="stylesheet" />
    </head>
    <body>
        <ext-window
            title="HBox Window With Splitters"
            autoShow="true"
            width="960"
            height="360">
            <layout>
                <ext-hboxLayout align="Stretch" />
            </layout>
            <defaults>
                <ext-add key="margin" value="2 0" />
            </defaults>
            <items>
                <ext-panel flex="1" title="Panel 1" collapseDirection="Left" />
                <ext-boxSplitter collapseTarget="Prev" />
                <ext-panel flex="1" title="Panel 2" collapseDirection="Left" />
                <ext-boxSplitter collapsible="true" collapseTarget="Prev" />
                <ext-panel flex="1" title="Panel 3" />
                <ext-boxSplitter collapsible="true" />
                <ext-panel flex="1" title="Panel 4" collapseDirection="Right" />
                <ext-boxSplitter collapsible="true" />
                <ext-panel flex="1" title="Panel 5" collapseDirection="Right" />
            </items>
        </ext-window>
    </body>
</html>
