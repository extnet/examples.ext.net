                            </items>
                        </ext-buttonGroup>
                        <ext-buttonGroup title="Other Actions" columns="3">
                            <items>
                                <ext-button
                                    text="Paste"
                                    iconCls="x-md md-icon-content-paste"
                                    scale="Large"
                                    iconAlign="Top"
                                    cls="x-btn-as-arrow"
                                    rowspan="3"
                                    />
                                <ext-splitButton
                                    text="Menu Button"
                                    iconCls="x-md md-icon-check-circle-outline"
                                    iconAlign="Top"
                                    arrowAlign="Bottom"
                                    scale="Large"
                                    rowspan="3">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Menu Button 1" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-splitButton text="Cut" iconCls="x-md md-icon-content-cut">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Cut Menu Item" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-button text="Copy" iconCls="x-md md-icon-content-copy" />
                                <ext-button text="Format" iconCls="x-md md-icon-create" />
                            </items>
                        </ext-buttonGroup>
                    </items>
                </ext-toolbar>
            </tbar>
        </ext-panel>
        <ext-panel
            title="Bottom Trigger"
            width="960"
            height="270"
            frame="true"
            marginAsString="0 0 20 0"
            bodyPadding="18"
            scrollable="true">
            <tbar>
                <ext-toolbar>
                    <items>
                        <ext-buttonGroup title="Clipboard">
                            <defaults>
                                <ext-add key="scale" value="medium" />
                                <ext-add key="iconAlign" value="top" />
                            </defaults>
                            <items>
                                <ext-splitButton text="Menu Button" iconCls="x-md md-icon-content-cut" arrowAlign="Bottom">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Menu Button 1" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-splitButton text="Cut" iconCls="x-md md-icon-content-cut" arrowAlign="Bottom">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Cut Menu Item" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-button text="Copy" iconCls="x-md md-icon-content-copy" cls="x-btn-as-arrow" />
