        <ext-panel
            title="Mix and Match sizes"
            width="960"
            height="270"
            frame="true"
            marginAsString="0 0 20 0"
            bodyPadding="18"
            scrollable="true">
            <tbar>
                <ext-toolbar>
                    <items>
                        <ext-buttonGroup title="Clipboard" columns="3">
                            <items>
                                <ext-button
                                    text="Paste"
                                    iconCls="x-md md-icon-content-paste"
                                    scale="Large"
                                    iconAlign="Top"
                                    cls="x-btn-as-arrow"
                                    rowspan="3"
                                    />
