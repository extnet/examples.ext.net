@page "{handler?}"
@model Ext.Net.Examples.Pages.samples.buttons.buttongroup.overview.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>
            Toolbar ButtonGroups - Ext.NET Examples
        </title>
        <link href="/resources/css/examples.css" rel="stylesheet" />
    </head>
    <body>
        <h1>
            &lt;ext-buttonGroup>
        </h1>
        <p>
            The <code>&lt;ext-buttonGroup&gt;</code> provides a container for arranging a group of
            related Buttons in a tabular manner.
        </p>

        <ext-panel
            title="Basic"
            width="960"
            height="270"
            frame="true"
            marginAsString="40 0 20 0"
            bodyPadding="18"
            scrollable="true">
            <tbar>
                <ext-toolbar>
                    <items>
                        <ext-splitButton text="Menu Button" iconCls="x-md md-icon-check-circle-outline">
                            <menu>
                                <ext-menu plain="true">
                                    <items>
                                        <ext-menuItem text="Menu Button 1" />
                                    </items>
                                </ext-menu>
                            </menu>
                        </ext-splitButton>
                        <ext-toolbarSeparator />
                        <ext-splitButton text="Cut" iconCls="x-md md-icon-content-cut">
                            <menu>
                                <ext-menu plain="true">
                                    <items>
                                        <ext-menuItem text="Cut Menu Item" />
                                    </items>
                                </ext-menu>
                            </menu>
                        </ext-splitButton>
                        <ext-button text="Copy" iconCls="x-md md-icon-content-copy" />
                        <ext-button text="Paste" iconCls="x-md md-icon-content-paste">
                            <menu>
                                <ext-menu plain="true">
                                    <items>
                                        <ext-menuItem text="Paste Menu Item" />
                                    </items>
                                </ext-menu>
                            </menu>
                        </ext-button>
                        <ext-toolbarSeparator />
                        <ext-button text="Format" iconCls="x-md md-icon-create" />
                    </items>
                </ext-toolbar>
            </tbar>
        </ext-panel>
        <ext-panel
            title="Multiple Columns - bottom title"
            width="960"
            height="270"
            frame="true"
            marginAsString="0 0 20 0"
            bodyPadding="18"
            scrollable="true">
            <tbar>
                <ext-toolbar>
                    <items>
                        <ext-buttonGroup title="Clipboard" headerPosition="Bottom" columns="2">
                            <items>
                                <ext-splitButton text="Menu Button" iconCls="x-md md-icon-check-circle-outline">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Menu Button 1" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-splitButton text="Cut" iconCls="x-md md-icon-content-cut">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Cut Menu Item" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-button text="Copy" iconCls="x-md md-icon-content-copy" />
                                <ext-button text="Paste" iconCls="x-md md-icon-content-paste">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Paste Menu Item" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-button>
                                <ext-button text="Format" iconCls="x-md md-icon-create" />
                            </items>
                        </ext-buttonGroup>
                        <ext-buttonGroup title="Other Actions" headerPosition="Bottom" columns="2">
                            <items>
                                <ext-splitButton text="Menu Button" iconCls="x-md md-icon-check-circle-outline">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Menu Button 1" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-splitButton text="Cut" iconCls="x-md md-icon-content-cut">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Cut Menu Item" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-splitButton>
                                <ext-button text="Copy" iconCls="x-md md-icon-content-copy" />
                                <ext-button text="Paste" iconCls="x-md md-icon-content-paste">
                                    <menu>
                                        <ext-menu plain="true">
                                            <items>
                                                <ext-menuItem text="Paste Menu Item" />
                                            </items>
                                        </ext-menu>
                                    </menu>
                                </ext-button>
                                <ext-button text="Format" iconCls="x-md md-icon-create" />
                            </items>
                        </ext-buttonGroup>
                    </items>
                </ext-toolbar>
            </tbar>
        </ext-panel>
