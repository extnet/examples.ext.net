@page "{handler?}"
@model Ext.Net.Examples.Pages.samples.layout.borderlayout.complex_in_markup.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>
            Complex BorderLayout - Ext.NET Examples
        </title>
        <link href="/resources/css/examples.css" rel="stylesheet" />
    </head>
    <body>
        <h1>
            Complex BorderLayout in Markup
        </h1>

        <ext-window
            title="Complex Layout"
            autoShow="true"
            width="960"
            height="640"
            collapsible="true"
            layout="Border">
            <items>
                <ext-panel
                    title="West"
                    region="West"
                    ui="Light"
                    rounded="false"
                    layout="Accordion"
                    width="270"
                    maxWidth="360"
                    x:raw-split="true"
                    collapsible="true">
                    <items>
                        <ext-panel title="Navigation" bodyPadding="18" html="Navigation" />
                        <ext-panel title="Settings" bodyPadding="18" html="Some settings in here." />
                    </items>
                </ext-panel>
                <ext-tabPanel region="Center" activeTab="0" plain="true">
                    <items>
                        <ext-panel title="Center Tab 1" bodyPadding="18" html="Hello ..." />
                        <ext-panel title="Center Tab 2" bodyPadding="18" html="... World" />
                    </items>
                </ext-tabPanel>
                <ext-panel
                    title="East"
                    region="East"
                    rounded="false"
                    ui="Light"
                    collapsible="true"
                    x:raw-split="true"
                    minWidth="180"
                    width="270"
                    layout="Fit">
                    <items>
                        <ext-tabPanel activeTab="1" tabPosition="Bottom" plain="true">
                            <items>
                                <ext-panel title="Tab 1" bodyPadding="18" html="East Tab 1" />
                                <ext-panel title="Tab 2" bodyPadding="18" html="East Tab 2" />
                            </items>
                        </ext-tabPanel>
                    </items>
                </ext-panel>
                <ext-panel
                    title="South"
                    region="South"
                    rounded="false"
                    ui="Light"
                    x:raw-split="true"
                    collapsible="true"
                    collapsed="true"
                    html="South"
                    height="180"
                    bodyPadding="18"
                    />
            </items>
        </ext-window>
    </body>
</html>
